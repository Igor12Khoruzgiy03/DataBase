@model IEnumerable<DataBase.Models.Massage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавить массаж", "Create")
</p>

@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" style="width:50px;" />
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.ImageUrl)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @* @Html.ActionLink("Edit", "Edit", new { id=item.Id_masseger }) |
                       @Html.ActionLink("Details", "Details", new { id=item.Id_masseger }) |
                       @Html.ActionLink("Delete", "Delete", new { id=item.Id_masseger }) *@

                </td>
            </tr>
        }
    </table>
}
else
{
    <p>Нет доступных массажей.</p>
}
